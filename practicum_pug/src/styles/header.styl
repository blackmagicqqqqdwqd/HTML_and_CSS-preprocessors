html 
ul
li
h1.main__section-header
body 
    margin: 0
    padding: 0
  
body  
     height: 100vh



 



.main
    display flex
    overflow hidden
    width 90%
    margin auto
    margin-bottom 1%
    margin-top 1%
    padding 0px
    justify-content space-between

.main img
    width 20%
    height 15%

div.main__section
    text-align center
    border: 2px solid lightgrey;
    margin: 0px;
    padding-top: 10px;
    height: 200px;
    overflow: hidden;
    width: 48%;
    
    height:90%;

div.main__section div.main__section-text
    text-align justify  
    padding 10px

div.main__section.main__section_right
    float:right
      
div.main__section.main__section_left
    float:left








    
ul.nav
    display:flex
    height 7%
    width: 100%
    flex-direction row
    &
    li.nav__item 
        margin 0
        padding 0
        & a 
            font-size: 20px;
            display:block
            white-space: nowrap;
            text-decoration: none;
            color: black;
            width:100%
            height:100%
            margin 10px
            

ul.nav li.nav__item
    overflow: hidden;
    
    display: block
    background: lightgrey
    box-sizing: border-box
    width 20%
    height:90%

ul.nav li.nav__item_active
    height:100%
    & a
        color red
    &:hover
        background-color #f87777
        color #f8f8f8   

ul.nav li.nav__item_first    
    width 34.2%

ul.nav li.nav__item_last
    width 30%
    
ul.nav li.nav__item_common
    &:hover
        background-color #f87777
        color #f8f8f8   









div.footer
    width 100%
    overflow hidden
    white-space nowrap
    background-color gray
    box-sizing border-box
    height 5%;
    padding 10px;


span.footer__text_left 
    float:left

span.footer__text_right
    float:right



div.gallery
    display:flex
    width: 90%
    margin: auto 
    height 20%
    
div.gallery img.gallery__picture-block-image
    width 100%
    height 100%
   
        

div.gallery a.gallery__picture-block
    display block
    width 25%
    margin-right 0.2vmin
    height 94%
    :hover 
        transform: scale(0.8)
        border 5px solid rgb(255, 255, 255)
        border-radius 15px
        
a.gallery__picture-block_bottom
    align-self: flex-end




@media (max-width: 600px)
    div.gallery
        flex-direction column
        height auto
    a.gallery__picture-block_bottom
        align-self flex-start
    div.gallery a.gallery__picture-block
        width 100%
        margin-bottom:0.2vmin
    ul.nav
        flex-direction column
        height auto
    ul.nav li.nav__item
        width 100%
    div.main__section
        margin 0 auto
        width 99%
    div.main
        0 margin auto
        flex-direction column
    div.main__section.main__section_left
        margin-bottom 2%
    div.main-moscow div.main-moscow__content
        grid-template-columns 1fr
        grid-template-rows auto auto



div.main-moscow
    margin 0 auto
    width 80%
    margin-bottom 1%
    & div.main-moscow__content img.main-moscow__content-image
        display block
        width 100%
        height 20vh
        border-radius 15px
        vertical-align middle

div.main-moscow__content main-moscow__content-text
    width:60%
    vertical-align middle

div.main-moscow__content
    overflow hidden
    align-items center
    display grid
    grid-template-columns 70% auto
    grid-template-rows 1fr

div.main-moscow h1.main-moscow__title
    display block
    
    width 100%


div.information table.information__table
    width 80%
    border-collapse: collapse;
    margin auto
    border 1px solid black
    padding-bottom 10px
    & th
    & td 
        border 1px solid black
        padding 10px
        text-align center
    
div.information 
    margin-bottom 1%
    margin-top 1%
div.menu
    margin-top 1%
    margin 0 auto
    
    width 80%
    
